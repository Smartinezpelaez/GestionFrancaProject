@model IEnumerable<GestionFranca.BLL.DTOs.TecnicoDTO>
@using GestionFranca.BLL.DTOs;

    @{
        ViewData["Title"] = "Index";    
     }   

<h1>Tecnicos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoBase)
            </th>  
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.SueldoBase)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TecnicoId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.TecnicoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>